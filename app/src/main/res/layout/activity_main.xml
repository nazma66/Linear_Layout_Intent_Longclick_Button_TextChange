<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/on_longclick"
        android:layout_width="226dp"
        android:layout_height="0dp"
        android:layout_marginTop="138dp"
        android:layout_marginBottom="194dp"
        android:text="Linear Layout(longclick)"
        app:layout_constraintBottom_toTopOf="@+id/buttontext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/on_click"
        android:layout_width="220dp"
        android:layout_height="98dp"
        android:layout_marginTop="44dp"

        android:text="Product(on click)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/on_longclick" />

    <Button
        android:id="@+id/buttontext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="205dp"
        android:text="click text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/on_click"
        app:layout_constraintStart_toStartOf="@+id/on_click"
        app:layout_constraintTop_toBottomOf="@+id/on_longclick" />


</androidx.constraintlayout.widget.ConstraintLayout>